<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:paddingStart="20dp"
    android:paddingVertical="10dp"
    tools:ignore="RtlSymmetry">

    <TextView
        android:id="@+id/lesson_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Название урока" />

    <TextView
        android:id="@+id/lesson_teacher_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Преподаватель: "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lesson_name" />

    <TextView
        android:id="@+id/lesson_teacher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Преподаватель"
        app:layout_constraintStart_toEndOf="@+id/lesson_teacher_title"
        app:layout_constraintTop_toTopOf="@+id/lesson_teacher_title" />

    <TextView
        android:id="@+id/lesson_auditorium_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Аудитория: "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lesson_teacher_title" />

    <TextView
        android:id="@+id/lesson_auditorium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="132"
        app:layout_constraintStart_toEndOf="@+id/lesson_auditorium_title"
        app:layout_constraintTop_toBottomOf="@+id/lesson_teacher_title" />

    <TextView
        android:id="@+id/lesson_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Время пары"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lesson_auditorium" />

</androidx.constraintlayout.widget.ConstraintLayout>